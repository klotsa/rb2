<div class="container">
  <button type="button" name="button"><a href="/recipes/new">Add a New Recipe</a></button>
  <button type="button" name="button"><a href="/recipes">Edit Recipes</a></button>
  <button type="button" name="button"><a href="/recipes_by_rating">Sort by rating</a></button>
  <button type="button" name="button"><a href="/ingredients">View all Ingredients</a></button>
<% if @instructions.any?() %>
<h2>These are the recipes in your Recipe Box</h2>
<ul>
  <% @instructions.each() do |instruction| %>
    <li><%= instruction.name %> <button class="delete" id="<%= instruction.id %>">Delete</button></li>
  <% end %>
</ul>
<% else %>
<h4>Nothing yet! Add new recipes!</h4>
<% end %>


</div>
